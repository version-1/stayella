<GridPane fx:id="gridlayout" fx:controller="group1.stayella.Controller.ControllerCharges"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
          hgap="50" vgap="15">
    <CheckBox fx:id="gymCheck" text=""
              GridPane.columnIndex="1"
              GridPane.rowIndex="3"
              onAction="#onSelectedAction"

    />
    <CheckBox fx:id="luggageCheck"
              text=""
              GridPane.columnIndex="1"
              GridPane.rowIndex="4"
              onAction="#onSelectedAction"
    />
    <CheckBox fx:id="extraBedCheck" text=""
              GridPane.columnIndex="1"
              GridPane.rowIndex="5"
              onAction="#onSelectedAction"
    />
    <CheckBox fx:id="foodServiceCheck"
              text=""
              GridPane.columnIndex="1"
              GridPane.rowIndex="6"
              onAction="#onSelectedAction"

    />
    <CheckBox fx:id="parkingCheck" text=""
              GridPane.columnIndex="1"
              GridPane.rowIndex="7"
              onAction="#onSelectedAction"

    />
    <CheckBox fx:id="washingRoomCheck"
              text=""
              GridPane.columnIndex="1"
              GridPane.rowIndex="8"
              onAction="#onSelectedAction"

    />

    <Label fx:id="sumOfCharge" text="Total : $ 0"
           GridPane.columnIndex="2"
           GridPane.rowIndex="11"/>
    <Button fx:id="submit" GridPane.columnIndex="1"
            GridPane.rowIndex="12" text="Submit" onAction="#onSubmitAction"/>
    <Button fx:id="close" GridPane.columnIndex="1"
            GridPane.rowIndex="13" text="close" onAction="#closeAction"/>
    <Button fx:id="reset" GridPane.columnIndex="2"
            GridPane.rowIndex="13" text="Reset" onAction="#onResetAction"/>


</GridPane>

